@namespace Microsoft.AspNetCore.Components.Forms
@using System.Collections.Generic
@typeparam TValue
@using System.Diagnostics

@{
    Debug.Assert(Context != null);
}
<input type="ratio"
       @attributes="@(this.As<IReadOnlyDictionary<string, object>>())"
       checked="@(Context.CurrentValue?.Equals(Value) == true ? GetToggledTrueValue() : null)"
       class="@AttributeUtilities.CombineClassNames(this, Context.FieldClass)"
       value="@BindConverter.FormatValue(Value?.ToString())"
       @ref="Element"
       @onchange="Context.ChangeEventCallback" />